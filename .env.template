# Environment Variables Template
# Copy this file to .env and customize the values

# Oracle Database Configuration
ORACLE_PWD=Oracle123!
ORACLE_CHARACTERSET=AL32UTF8
ORACLE_SID=XE

# PostgreSQL Configuration
POSTGRES_DB=targetdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Postgres123!

# GoldenGate Configuration
OGG_ADMIN_PWD=Oracle123!
OGG_SECURE=false

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Network Configuration
GG_SUBNET=172.20.0.0/16

# Container Memory Limits (optional)
ORACLE_MEMORY=2g
POSTGRES_MEMORY=1g
GOLDENGATE_MEMORY=1g

# Enable/Disable Services (true/false)
ENABLE_PGADMIN=true
ENABLE_GOLDENGATE=true

# Logging Levels
ORACLE_LOG_LEVEL=INFO
POSTGRES_LOG_LEVEL=INFO
GOLDENGATE_LOG_LEVEL=INFO